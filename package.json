{
  "name": "ai-studio-bridge",
  "displayName": "AI Studio Bridge",
  "description": "Helper to stage files for Google AI Studio",
  "version": "0.0.2",
  "publisher": "local",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-bridge.stageWorkspace",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-bridge.stageWorkspace",
        "title": "AI Studio: Stage Open Files & Structure",
        "icon": "$(rocket)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ai-bridge.stageWorkspace",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "editor/title/context": [
        {
          "command": "ai-bridge.stageWorkspace",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "ai-bridge.stageWorkspace",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm prune --production",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "ignore": "^5.3.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.57.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2",
    "typescript-eslint": "^8.47.0"
  }
}
